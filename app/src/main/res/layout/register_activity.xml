<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:background="@color/theme_color_press"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <include layout="@layout/page_title"/>

  <LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
      android:layout_width="400dp"
      android:layout_height="300dp"
      android:layout_gravity="center_horizontal">

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
          android:id="@+id/textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right|center_vertical"
          android:paddingLeft="16dp"
          android:text="用户名" />
        <EditText
          android:id="@+id/et_username"
          style="@style/tv_et_item_content"
          android:layout_marginLeft="16dp"
          android:layout_gravity="center_vertical"
          android:textColorHint="#CCCCCC"
          android:paddingLeft="8dp"
          android:textColor="@color/bottomBtnNormal"
          android:hint="请输入手机号/用户名" />
      </TableRow>

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <TextView
          android:id="@+id/textView5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right|center_vertical"
          android:paddingLeft="16dp"
          android:text="密码" />
        <EditText
          android:id="@+id/et_password"
          style="@style/tv_et_item_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="16dp"
          android:inputType="textPassword"
          android:paddingLeft="8dp"
          android:hint="请输入密码" />
      </TableRow>

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right|center_vertical"
          android:paddingLeft="16dp"
          android:text="确认密码" />
        <EditText
          android:id="@+id/et_password2"
          style="@style/tv_et_item_content"
          android:layout_gravity="center_vertical"
          android:inputType="textPassword"
          android:layout_marginLeft="16dp"
          android:paddingLeft="8dp"
          android:hint="请再次输入密码" />
      </TableRow>

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right|center_vertical"
          android:paddingLeft="16dp"
          android:text="电子邮件" />
        <EditText
          android:id="@+id/et_email"
          style="@style/tv_et_item_content"
          android:layout_gravity="center_vertical"
          android:paddingLeft="8dp"
          android:layout_marginLeft="16dp"
          android:hint="请输入电子邮件" />
      </TableRow>
    </TableLayout>

    <Button
      android:id="@+id/et_register"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:background="@drawable/buttonbule"
      android:onClick="zhuce"
      android:textColor="@color/white"
      android:text="注册"/>

  </LinearLayout>
</LinearLayout>